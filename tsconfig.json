{
    "compilerOptions": {
        "module": "es6",
        "lib": ["esnext", "dom"],
        "rootDir": ".",
        "outDir": "./Guides/js",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "target": "ES2020",
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": ["./Client/*", "./Guides/*"],
    "exclude": ["./node_modules"]
}
